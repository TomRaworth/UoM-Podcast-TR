+	cp -a ./tests $(SRC)
+	cp -a ./profiles $(SRC)
+	chmod -R 644 $(SRC)
+	install -m644 ./AUTHORS $(SRC)
+	install -m644 ./CHANGELOG $(SRC)
+	install -m644 ./LICENSE $(SRC)
+	install -m644 ./README $(SRC)
