+	install -m755 ./run_galicaster.py $(SRC)
+	install -m755 ./setup.py $(SRC)
+	install -m644 ./conf-dist.ini $(SRC)
+	install -m644 ./MANIFEST.in $(SRC)
+	install -m644 ./conf.ini $(CONFIG)
+	cp -a ./docs/icons/* -t $(ICONS)
+	chmod -R 644 $(ICONS)
